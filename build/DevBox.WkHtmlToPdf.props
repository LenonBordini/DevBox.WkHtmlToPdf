<Project>

    <ItemGroup>
        <WkHtmlToPdfFiles Include="$(MSBuildThisFileDirectory)../wkhtmltopdf/Executables/**/*.*" />
    </ItemGroup>

    <Target Name="CopyWkHtmlToPdfFilesOnBuild" BeforeTargets="Build">
        <Message Text="Copying wkhtmltopdf files" />
        <Copy SourceFiles="@(WkHtmlToPdfFiles)" DestinationFolder="$(OutputPath)\wkhtmltopdf\Executables\%(RecursiveDir)" />
    </Target>

    <Target Name="CopyWkHtmlToPdfFilesAfterPublish" AfterTargets="AfterPublish">
        <Message Text="Copying wkhtmltopdf files" />
        <Copy SourceFiles="@(WkHtmlToPdfFiles)" DestinationFolder="$(PublishDir)\wkhtmltopdf\Executables\%(RecursiveDir)" />
    </Target>

</Project>
